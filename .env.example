# Streamlit Server Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Streamlit Theme Configuration (Optional)
# Uncomment and customize to change the look and feel
# STREAMLIT_THEME_PRIMARY_COLOR=#1976d2
# STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
# STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
# STREAMLIT_THEME_TEXT_COLOR=#262730
# STREAMLIT_THEME_FONT=sans serif

# Application Settings
DATA_DIR=./data

# Python Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Development Settings (set to 'true' for development mode)
# STREAMLIT_SERVER_RUN_ON_SAVE=true
# STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# Logging (optional)
# STREAMLIT_LOGGER_LEVEL=info
# STREAMLIT_LOGGER_MESSAGE_FORMAT=%(asctime)s %(levelname)s: %(message)s
